      <Button fx:id="coneButton" layoutX="379.0" layoutY="266.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="120.0" text="Cone" onAction="#handleButton8Action" />
      <Button fx:id="cylinderButton" layoutX="161.0" layoutY="313.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="120.0" text="Cylinder" onAction="#handleButton6Action"/>
      <Button fx:id="torusButton" layoutX="319.0" layoutY="313.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="120.0" text="Torus" onAction="#handleButton9Action"/>
