            <Font size="48.0" />
         </font>
      </Label>
      <Label layoutX="168.0" layoutY="142.0" text="Please select from the menu below:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button fx:id="circleButton" layoutX="35.0" layoutY="221.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="120.0" text="Circle" onAction="#handleButton1Action"/>
